@model Project2.Models.Product

@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #fdf1ec;
    }

    .register-left {
        text-align: center;
        color: #fff;
        padding: 30px;
    }

    .register-left {
        padding: 20px 20px 0;
    }

        .register-left .btn-primary {
            border-radius: 1.5rem;
            border: none;
            background: #f8f8f8;
            font-weight: 600;
            color: #555;
            margin-top: 20px;
            padding: 10px
        }

            .register-left .btn-primary:hover {
                background: #000;
            }

    .register-right {
        border: none;
        background: #d0fdf3;
        border-top-left-radius: 10% 50%;
        border-bottom-left-radius: 10% 50%;
        padding: 50px;
    }

        .register-right h2 {
            text-align: center;
            margin-bottom: 10px;
            color: #555/
        }

    .register-form {
        padding: 20px;
    }

    .register-right .btn-primary {
        float: right;
        border-radius: 1.5rem;
        border: none;
        background: #f89800;
        font-weight: 600;
        color: #fff;
        margin-top: 20px;
        padding: 10px
    }

        .register-right .btn-primary:hover {
            background: #ff5722
        }
</style>


<center>
    <h2>Add Product</h2>
</center>

<br />&nbsp;<br />

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-7 register-right">
                <h2>Fill the Form</h2>
                <div class="register-form">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Product Name">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Product Price">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Product Description">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Product Category">
                    </div>
                    <div class="form-group">
                        <input type="file" class="form-control" placeholder="Product Image">
                    </div>

                    <button type="button" class="btn btn-primary">Add Product</button>
                </div>
            </div>
        </div>
    </div>
</body>

